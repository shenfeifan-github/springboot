<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.mapper.UserMapper">
    <insert id="saveUser">
        insert into User (name,number,class_number,create_time)
        values (#{vo.name},#{vo.number},#{vo.classNumber},NOW())
    </insert>
    <update id="removeUser">
        update user set status =1
        <where>
        <if test="id != null">
                id=#{id}
        </if>
        </where>
    </update>
    <select id="getUser" resultType="com.springboot.pojo.Dto.UserDto">
        select id,
               name,
               number,
               class_number As classNumber,
               create_time AS createTime
        from user
     <where>
         <if test="vo.name !=null">
            name=#{vo.name}
         </if>
         <if test="vo.number !=null">
            and number=#{vo.number}
         </if>
         <if test="vo.classNumber !=null">
            and class_number=#{vo.classNumber}
         </if>
          and status=0
     </where>
        order by create_time DESC
    </select>
    <select id="getUserNmber" resultType="com.springboot.pojo.User">
        select number,name from user where number=#{number}
    </select>
    <select id="getUserExcel" resultType="com.springboot.pojo.EasyExcel.UserExecl">
        select
               u.name,
               u.number,
               u.class_number As classNumber,
               u.create_time AS createTime,
               g.class_name AS className
             from user u left join grade g  on u.class_number =g.codeshare
    </select>
</mapper>