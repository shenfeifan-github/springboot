<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.mapper.UserMapper">
    <insert id="saveUser">
        insert into User (name,number,create_time) values (#{name},#{number},NOW())
    </insert>
    <select id="getUser" resultType="com.springboot.pojo.Dto.UserDto">
        select id,
               name,
               number,
               class_number As classNumber,
               create_time AS createTime
        from user
     <where>
         <if test="vo.name !=null">
            name=#{vo.name}
         </if>
         <if test="vo.number !=null">
            and number=#{vo.number}
         </if>
         <if test="vo.classNumber !=null">
            and class_number=#{vo.classNumber}
         </if>
     </where>
        order by create_time DESC
    </select>
</mapper>